<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Notification_panel">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#E1DDDD">

                <TextView
                    android:id="@+id/current_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Loading..."
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/announcemt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="send your announcement"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/Send"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@color/yellow"
                android:gravity="center"
                android:onClick="send"
                android:text="Send"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <Button
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@color/yellow"
                android:gravity="center"
                android:onClick="Delete"
                android:text="Delete Current Message"
                android:textColor="@color/blue"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/custom_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/texww"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Direct notification to"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/customNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/title_noti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:hint="notification title"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/add_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@color/yellow"
                        android:onClick="add_photo"
                        android:text="Attach photo"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/photo"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/body_noti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/button4"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/yellow"
                android:insetBottom="0dp"
                android:onClick="send_noti"
                android:text="Send"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="test"
                android:text="Button" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>